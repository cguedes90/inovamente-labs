{
  "name": "inovamente-labs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma db push && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "cross-env ANALYZE=true next build",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:backup": "node scripts/backup-production.js",
    "db:restore": "node scripts/restore-backup.js",
    "db:init": "node scripts/init-db.js",
    "deploy": "npm run build && git add . && git commit -m 'Deploy update' && git push origin main",
    "deploy:safe": "node scripts/safe-deploy.js",
    "deploy:vercel": "vercel --prod",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rimraf .next && rimraf out && rimraf dist",
    "clean:deps": "rimraf node_modules && npm install",
    "postinstall": "prisma generate",
    "prepare": "husky install || exit 0"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwind",
    "postgresql",
    "prisma",
    "ticket-system",
    "client-portal"
  ],
  "author": "InovaMente Labs",
  "license": "MIT",
  "description": "Sistema de gestÃ£o de clientes e tickets da InovaMente Labs",
  "homepage": "https://inovamentelabs.com.br",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inovamente-labs/client-portal.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.13.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-query": "^5.84.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.4.5",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.61.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.5",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9.32.0",
    "eslint-config-next": "^15.4.5",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.0.3",
    "prisma": "^6.13.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@next/swc-darwin-arm64": "^15.4.5",
    "@next/swc-darwin-x64": "^15.4.5",
    "@next/swc-linux-arm64-gnu": "^15.4.5",
    "@next/swc-linux-arm64-musl": "^15.4.5",
    "@next/swc-linux-x64-gnu": "^15.4.5",
    "@next/swc-linux-x64-musl": "^15.4.5",
    "@next/swc-win32-arm64-msvc": "^15.4.5",
    "@next/swc-win32-ia32-msvc": "^15.4.5",
    "@next/swc-win32-x64-msvc": "^15.4.5"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
